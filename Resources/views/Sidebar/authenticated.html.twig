<style>
.user-panel { background: white; padding-top: 5px; padding-bottom: 5px; }
.user-panel span { font-size: 16px; padding-left: 25px; }
.sidebar-collapse .user-panel { padding: 0px 3px; background: #0093E7; color: #fff; }
.user-panel > .image > img { height: 39px; width: 39px; }
.sidebar-collapse .user-panel > .image > img{ height: 49px; width: 49px; }
</style>

<div class="user-panel bg-light">
	<div class="pull-left image">
        {% if cmsLogo is defined and cmsLogo %}<img src="{{ cmsLogo }}" class="logo" alt="{{ cmsLogoAlt }}"  />{% endif %} 
        {% if cmsLogoIcon is defined and cmsLogoIcon %}<img src="{{ cmsLogoIcon }}" class="logo-icon" alt="{{ cmsLogoAlt }}"  />
        {% else %}<span>{{ cmsName }}</span>
        {% endif %}
        
    </div>
</div>

